datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Vacancy {
  applications Application[]
  company      Company?           @relation(fields: [companyId], references: [id])
  companyId    String?
  createdAt    DateTime           @default(now())
  description  String?
  id           String             @id @default(cuid())
  status       EnumVacancyStatus?
  title        String?
  updatedAt    DateTime           @updatedAt
}

model Intern {
  applications Application[]
  createdAt    DateTime      @default(now())
  email        String?
  id           String        @id @default(cuid())
  name         String?
  phone        String?
  resume       Json?
  updatedAt    DateTime      @updatedAt
}

model Company {
  address   String?
  createdAt DateTime  @default(now())
  email     String?
  id        String    @id @default(cuid())
  name      String?
  phone     String?
  updatedAt DateTime  @updatedAt
  vacancies Vacancy[]
}

model Application {
  createdAt DateTime               @default(now())
  id        String                 @id @default(cuid())
  intern    Intern?                @relation(fields: [internId], references: [id])
  internId  String?
  status    EnumApplicationStatus?
  updatedAt DateTime               @updatedAt
  vacancy   Vacancy?               @relation(fields: [vacancyId], references: [id])
  vacancyId String?
}

enum EnumVacancyStatus {
  Option1
}

enum EnumApplicationStatus {
  Option1
}
